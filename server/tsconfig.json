{
  "include": ["src/**/*"],
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,     
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}